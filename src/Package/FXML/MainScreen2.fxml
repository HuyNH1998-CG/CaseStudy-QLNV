                <TableColumn fx:id="tableGender" prefWidth="75.0" text="Gioi Tinh" />
                <TableColumn fx:id="tablePhone" text="SDT" />
                <TableColumn fx:id="tableEmail" minWidth="0.0" prefWidth="70.0" text="Email" />
                <TableColumn fx:id="tableSalary" prefWidth="75.0" text="Luong" />
                <TableColumn fx:id="tableTotalSal" prefWidth="75.0" text="Tong luong" />
                <TableColumn fx:id="tableStatus" prefWidth="75.0" text="Trang thai" />
